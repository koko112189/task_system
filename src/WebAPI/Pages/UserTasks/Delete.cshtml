@page
@model TasksWeb.Pages.UserTasks.DeleteModel
@{
    ViewData["Title"] = "Delete Task";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm mt-5">
                <div class="card-header bg-danger text-white">
                    <h2 class="card-title mb-0">Delete Task</h2>
                </div>
                <div class="card-body">
                    <h3 class="text-center">Are you sure you want to delete this task?</h3>
                    <hr />
                    <dl class="row">
                        <dt class="col-sm-3">Title</dt>
                        <dd class="col-sm-9">@Model.Task.Title</dd>

                        <dt class="col-sm-3">Description</dt>
                        <dd class="col-sm-9">@Model.Task.Description</dd>

                        <dt class="col-sm-3">Status</dt>
                        <dd class="col-sm-9">@Model.Task.Status</dd>

                        <dt class="col-sm-3">Assigned User</dt>
                        <dd class="col-sm-9">@Model.Task.AssignedUser?.UserName</dd>
                    </dl>
                </div>
                <div class="card-footer text-center">
                    <form method="post" class="d-inline">
                        <input type="hidden" asp-for="Task.Id" />
                        <button type="submit" class="btn btn-danger btn-lg">Delete</button>
                        <a asp-page="./Index" class="btn btn-outline-secondary btn-lg ml-2">Back to List</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>